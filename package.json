{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "NODE_OPTIONS=--max_old_space_size=4096 && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./ -o ./dist",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --exit-child --respawn --ignore-watch node_modules --no-notify app/index.ts",
    "start:prod": "ts-node -r tsconfig-paths/register ./dist/app/index.js",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "stepup": "stepup notes add"
  },
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "axios": "^0.26.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "js-essentials-functions": "^1.2.7",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "restify": "^8.6.1",
    "restify-errors": "^8.0.2",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@types/restify": "^8.5.4",
    "@types/restify-errors": "^4.3.4",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "prisma": "^3.11.0",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write ."
    ]
  }
}
